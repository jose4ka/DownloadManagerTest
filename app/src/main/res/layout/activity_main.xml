<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тест скачивания файлов"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDownloadToDownloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download to 'Downloads'"/>

    <Button
        android:id="@+id/btnDownloadToInternalStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download to Internal Storage"/>

    <Button
        android:id="@+id/btnDownloadByRetrofit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download By Retrofit"/>




</LinearLayout>